<h1>Burgers!</h1>

<div class="burgers">

        <h3 class="burgers-title">Burgers</h3>

        <ul>

            {{#each burgers}}
            {{#unless this.devoured}}

            <li class="list-of-burgers rounded">{{this.burger_name}} <button id="devourBtn" class="devourBtn btn-primary rounded"
                    data-id="{{this.id}}">Devour</button></li>


            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="burgers">

        <h3 class="burgers-title">Devoured Burgers</h3>

        <ul>

            {{#each burgers}}
            {{#if this.devoured}}

            <li class="list-of-eaten-burgers">{{this.burger_name}}<button id="deleteBtn" class="deleteBtn btn-danger rounded"
                    data-id="{{this.id}}">Delete</button></li>


            {{/if}}
            {{/each}}

        </ul>

    </div>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> delicious!<br>
    <input type="radio" name="devoured" value="0" id="unedible"> unedible
  </div>

  <button id= "add-burger" type="submit">Add Burger</button>
</form>